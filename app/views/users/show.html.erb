<div class="row">
	<div class="col-md-8 col-md-offset-2 text-center">
		<%= avatar  %>
	</div>
</div>

<!-- @user info -->
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title text-center">
						<%= name %>
						<span class="glyphicon glyphicon-earphone"></span><%= @user.phone_number  do %>
				</h3>
			</div>
				<div class="pane-body">
					<cite>Member Since: <strong><%= date_reg %></strong></cite>
					<% if correct_user?(@user) || current_user.admin? %>
					<%= link_to "Edit Profile", edit_user_registration_path(@user), class: "btn btn-xs btn-success" %>
					<% end %>
				</div>
			</div>
	</div>
</div>